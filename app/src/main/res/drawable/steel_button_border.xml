<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <corners android:radius="3dip" />

            <stroke android:width="1dip" android:color="#525252" />

            <gradient android:angle="-90" android:endColor="#adadc6" android:startColor="#565663" />
        </shape></item>
    <item android:state_focused="true"><shape android:shape="rectangle">
            <corners android:radius="3dip" />

            <stroke android:width="1dip" android:color="#525252" />

            <solid android:color="#e0341e" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <corners android:radius="3dip" />

            <stroke android:width="1dip" android:color="#525252" />

            <gradient android:angle="-90" android:endColor="#565663" android:startColor="#adadc6" />
        </shape></item>

</selector>