<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <corners android:radius="3dip" />

            <stroke android:width="1dip" android:color="#4a3952" />

            <gradient android:angle="-90" android:endColor="#6363b5" android:startColor="#31315A" />
        </shape></item>
    <item android:state_focused="true"><shape android:shape="rectangle">
            <corners android:radius="3dip" />

            <stroke android:width="1dip" android:color="#4a3952" />

            <solid android:color="#e0341e" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <corners android:radius="3dip" />

            <stroke android:width="1dip" android:color="#4a3952" />

            <gradient android:angle="-90" android:endColor="#31315A" android:startColor="#6363b5" />
        </shape></item>

</selector>