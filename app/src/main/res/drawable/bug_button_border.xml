<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <corners android:radius="3dip" />

            <stroke android:width="1dip" android:color="#426b39" />

            <gradient android:angle="-90" android:endColor="#adbd21" android:startColor="#677113" />
        </shape></item>
    <item android:state_focused="true"><shape android:shape="rectangle">
            <corners android:radius="3dip" />

            <stroke android:width="1dip" android:color="#426b39" />

            <solid android:color="#e0341e" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <corners android:radius="3dip" />

            <stroke android:width="1dip" android:color="#426b39" />

            <gradient android:angle="-90" android:endColor="#677113" android:startColor="#adbd21" />
        </shape></item>

</selector>