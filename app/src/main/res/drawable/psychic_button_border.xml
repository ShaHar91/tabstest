<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <corners android:radius="3dip" />

            <stroke android:width="1dip" android:color="#6b3939" />

            <gradient android:angle="-90" android:endColor="#ff73a5" android:startColor="#7F3952" />
        </shape></item>
    <item android:state_focused="true"><shape android:shape="rectangle">
            <corners android:radius="3dip" />

            <stroke android:width="1dip" android:color="#6b3939" />

            <solid android:color="#e0341e" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <corners android:radius="3dip" />

            <stroke android:width="1dip" android:color="#6b3939" />

            <gradient android:angle="-90" android:endColor="#7F3952" android:startColor="#ff73a5" />
        </shape></item>

</selector>