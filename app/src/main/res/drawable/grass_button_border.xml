<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <corners android:radius="3dip" />

            <stroke android:width="1dip" android:color="#426b39" />

            <gradient android:angle="-90" android:endColor="#7bce52" android:startColor="#497B31" />
        </shape></item>
    <item android:state_focused="true"><shape android:shape="rectangle">
            <corners android:radius="3dip" />

            <stroke android:width="1dip" android:color="#426b39" />

            <solid android:color="#e0341e" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <corners android:radius="3dip" />

            <stroke android:width="1dip" android:color="#426b39" />

            <gradient android:angle="-90" android:endColor="#497B31" android:startColor="#7bce52" />
        </shape></item>

</selector>